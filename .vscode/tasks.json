{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "nimble",
            "args": ["build"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "command": "nimble",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
